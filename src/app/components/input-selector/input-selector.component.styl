.input-selector {
  width: 100%
  display: flex
  margin: 24px 0
  .ant-input {
    flex: 1
    margin-right: 8px
    height 32px
    border-radius: 4px
    border: 1px solid #d9d9d9
    padding: 4px 11px
    font-size: 14px
    color: rgba(0, 0, 0, 0.65)
    background-color: #fff
    background-image: none
    box-shadow: none
    transition: all 0.3s
    &:hover {
      border-color: #40a9ff
      border-right-width: 1px !important
    }
    &:focus {
      border-color: #40a9ff
      border-right-width: 1px !important
      box-shadow: 0 0 0 2px rgba(24, 144, 255, 0.2)
    }
  }
}
